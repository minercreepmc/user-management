{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "incremental": true,
        "skipLibCheck": true,
        "strictNullChecks": false,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "forceConsistentCasingInFileNames": false,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true,
        "types": ["jest", "jest-extended"],
        "paths": {
            "@config": ["./config"],
            "@config/*": ["./config/*"],
            "@aggregates": ["./src/domain/aggregates"],
            "@aggregates/*": ["./src/domain/aggregates/*"],
            "@value-objects": ["./src/domain/value-objects"],
            "@value-objects/*": ["./src/domain/value-objects/*"],
            "@domain-events": ["./src/domain/domain-events"],
            "@domain-events/*": ["./src/domain/domain-events/*"],
            "@integration-events": ["./src/domain/integration-events"],
            "@integration-events/*": ["./src/domain/integration-events/*"],
            "@domain-services": ["./src/domain/domain-services"],
            "@domain-services/*": ["./src/domain/domain-services/*"],
            "@domain-exceptions": ["./src/domain/domain-exceptions"],
            "@domain-exceptions/*": ["./src/domain/domain-exceptions/*"],
            "@domain-interfaces": ["./src/domain/interfaces"],
            "@domain-interfaces/*": ["./src/domain/interfaces/*"],
            "@commands": ["./src/domain/commands"],
            "@commands/*": ["./src/domain/commands/*"],
            "@use-cases": ["./src/use-cases"],
            "@use-cases/*": ["./src/use-cases/*"],
            "@database": ["./src/infrastructures/database"],
            "@database/*": ["./src/infrastructures/database/*"],
            "@jontrollers": ["./src/interface-adapters/controllers"],
            "@controllers/*": ["./src/interface-adapters/controllers/*"],
            "@message-handlers": ["./src/interface-adapters/message-handlers"],
            "@message-handlers/*": ["./src/interface-adapters/message-handlers/*"],
            "@migrations": ["./src/infrastructures/database/migrations"],
            "@migrations/*": ["./src/infrastructures/database/migrations/*"],
            "@modules": ["./src/modules"],
            "@modules/*": ["./src/modules/*"],
            "@src": ["./src"],
            "@src/*": ["./src/*"],
            "@base": ["./utils/base"],
            "@base/*": ["./utils/base/*"],
            "@utils": ["./utils"],
            "@utils/*": ["./utils/*"],
            "@interface-adapters/*": ["./interface-adapters/*"],
            "@shared": ["./shared"],
            "@shared/*": ["./shared/*"]
        }
    },
    "include": [
        "./src/**/*",
        "./tests/**/*",
        "./config/**/*",
        "./utils/**/*",
        "./jest.config.ts",
        "./tsconfig.json"
    ],
    "exclude": ["node_modules", "dist"]
}
